var schema = `
  type TodoType {
    id: ID
    title: String
    completed: Boolean
  }

  type Query {
    todos: [TodoType]
  }

  type Mutation {
    add(title: String!): [TodoType]
    delete(id: ID, title: String, justOne: Boolean): [TodoType]
    update(id: ID, title: String, newTitle: String!): TodoType
  }

  schema {
    query: Query,
    mutation: Mutation
  }
`
module.exports = schema
